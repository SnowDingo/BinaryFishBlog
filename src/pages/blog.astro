---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BaseLayout from '../layouts/Base-Layouts.astro';
import BlogPost from '../components/BlogPost.astro'
import BaseLayouts from '../layouts/Base-Layouts.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Blog"
---
<BaseLayouts pageTitle={pageTitle}>
        <p>Take a loot at numerouse blog posts and articles about Atcoder, Game dev, and Web development</p>
        <ul>
            {allPosts.map((post) => <BlogPost url={post.url} imgurl={post.frontmatter.imgurl} title={post.frontmatter.title} /> )}
          </ul>
</BaseLayouts>