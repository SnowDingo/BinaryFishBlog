---
import '../styles/global.css';
import BaseLayouts from '../layouts/Base-Layouts.astro';
import BlogPostComponent from '../components/BlogPostComponent.astro'
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Articles"
---
<BaseLayouts pageTitle={pageTitle}>
        <p>Take a loot at numerouse blog posts and articles about Atcoder, Game dev, and Web development</p>
        <ul>
          {allPosts.map((post) => <BlogPostComponent url={post.url} title={post.frontmatter.title} />)}
          </ul>
</BaseLayouts>