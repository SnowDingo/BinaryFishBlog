import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BaseLayout from '../layouts/Base-Layouts.astro';
import BaseLayouts from '../layouts/Base-Layouts.astro';
const pageTitle = "About Me"
const identity = {
  firstName: "Snow",
  country: "Japan",
  occupation: "Blog writier",
  hobbies: ["coding", "cooking", "jujutsu"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Godot","Atcoder"];
---
<BaseLayouts pageTitle={pageTitle}>
